<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.dependency.Constructor.UsingXML.pojo.Address" id="addId2">
        <constructor-arg name="area" value="Almora"/>
        <constructor-arg name="city" value="Norway"/>
        <constructor-arg name="pincode" value="209302"/>
    </bean>

    <bean class="com.dependency.Constructor.UsingXML.pojo.Student" id="stdId1">
        <constructor-arg name="name" value="John Cena"/>
        <constructor-arg name="rollno" value="7"/>
        <constructor-arg name="address" ref="addId2"/>
    </bean>

</beans>